<div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Ordered Product Details</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @order_total = 0 %>
      <% @order.line_items.each do |line_item| %>
        <%= render 'item', item: line_item %>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="4">
          Total Billed:
        </th>
        <th>
          <%= @order_total %>
        </th>
      </tr>
    </tfoot>
  </table>
</div>