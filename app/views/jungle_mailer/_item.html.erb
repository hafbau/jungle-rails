<% if product = item.product %>
  <% item_total = item.total_price %>
  <% @order_total += item_total %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= item.quantity %>
    </td>
    <td>
      <%= item_total %>
    </td>
  </tr>
<% end %>