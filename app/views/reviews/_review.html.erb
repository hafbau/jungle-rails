<% review = @object[:review] %>
<% current_user = @object[:current_user] %>
<dl class=review>
  <dt>
    <%= review.user.first_name %>:&nbsp;
    <input type="number" name="rating" class="rating" value="<%= review.rating %>" data-readonly/>

    <% if current_user && (current_user.id == review.user_id) %>
      <%= link_to fa_icon('trash'), [@product, review], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>

  </dt>
  <dd><%= review.description %></dd>
  <dd class='time'>at 
    <time datetime=<%= review.created_at %> >
    <%= review.created_at %></time>
  </dd>
</dl>